{
  "name": "wiregui",
  "productName": "wiregui",
  "version": "1.8.1",
  "description": "A graphical user interface for wireguard",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": "devsfy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Devsfy/wiregui"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/icons/icon.png",
        "executableName": "wiregui"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "wiregui",
            "icon": "./src/assets/icons/icon.ico",
            "setupIcon": "./src/assets/icons/icon.ico"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "./src/assets/icons/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "./src/assets/icons/icon.png"
            }
          }
        },
        {
          "name": "electron-forge-maker-appimage",
          "platforms": [
            "linux"
          ],
          "config": {
            "options": {
              "icon": "./src/assets/icons/icon.png"
            }
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "Devsfy",
              "name": "wiregui"
            }
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devServer": {
              "liveReload": true,
              "hot": true
            },
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^4.2.1",
    "electron": "12.0.4",
    "electron-forge-maker-appimage": "https://github.com/Marcus10110/electron-forge-maker-appimage.git",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.20.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "node-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.10",
    "@chakra-ui/react": "^1.5.1",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "child_process": "^1.0.2",
    "date-fns": "^2.21.1",
    "electron-progressbar": "^2.2.1",
    "electron-squirrel-startup": "^1.0.0",
    "framer-motion": "^4",
    "immer": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.3",
    "recoil": "^0.3.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "sudo-prompt": "^9.2.1",
    "update-electron-app": "^2.0.1",
    "wireguard-tools": "^0.1.0",
    "wireguard-tools.js": "^1.8.1"
  }
}
